{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2019",
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": true,
    "noImplicitThis": false,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "."
  },
  "include": ["src/*"]
}
